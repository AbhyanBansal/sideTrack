{
  "name": "sidetrack",
  "version": "1.0.0",
  "description": "",
  "main": "app/main/main.js",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dev": "vite",
    "clean": "node scripts/clean.js",
    "setup:wincodesign": "node scripts/setup-wincodesign.js",
    "postinstall": "electron-builder install-app-deps",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run clean && npm run setup:wincodesign && vite build && cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.sidetrack.app",
    "productName": "SideTrack",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "build/**/*",
      "package.json"
    ],
    "forceCodeSigning": false,
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "extends": null
  },
  "author": "Abhyan Bansal",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.563.0",
    "music-metadata": "^11.11.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}